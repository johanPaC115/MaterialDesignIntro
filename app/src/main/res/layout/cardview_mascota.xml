<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview"
    android:layout_gravity="center"
    card_view:cardBackgroundColor="@color/card_viewcolor2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgPet"
            android:layout_width="@dimen/width_img"
            android:layout_height="@dimen/height_img"
            android:src="@drawable/cerdito1"
            android:scaleType="centerCrop"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/imgLikeHueso"
                android:layout_width="@dimen/sizeHueso"
                android:layout_height="@dimen/sizeHueso"
                android:paddingLeft="@dimen/paddingLeft"
                android:src="@drawable/icons8_hueso"
                android:layout_centerVertical="true"
                android:paddingStart="@dimen/paddingLeft" />
            <TextView
                android:id="@+id/tvNpmbrePet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombre_pet"
                android:textSize="@dimen/nombrePet_size"
                android:textStyle="bold"
                android:textColor="@color/colorSecondaryText"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/paddingLeft"
                android:layout_toRightOf="@+id/imgLikeHueso"
                android:layout_toEndOf="@+id/imgLikeHueso" />

            <TextView
                android:id="@+id/tvRaitingPet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/raiting_pet"
                android:textSize="@dimen/nombrePet_size"
                android:textStyle="bold"
                android:textColor="@color/colorSecondaryText"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/paddingRight"
                android:layout_toLeftOf="@+id/imgRaiting"
                android:layout_toStartOf="@+id/imgRaiting" />

            <ImageView
                android:id="@+id/imgRaiting"
                android:layout_width="@dimen/sizeHueso"
                android:layout_height="@dimen/sizeHueso"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icons8_hueso_raitng"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>