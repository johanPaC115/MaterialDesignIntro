<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:elevation="@dimen/elevacion_actionBar"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        tools:ignore="MissingConstraints"
        android:paddingLeft="@dimen/paddingLeft"
        android:paddingRight="@dimen/paddingRight"
        >

        <ImageView
            android:id="@+id/imgPet"
            android:layout_width="@dimen/sizeIcon"
            android:layout_height="@dimen/sizeIcon"
            android:layout_centerVertical="true"
            android:src="@drawable/sharp_pets" />

        <TextView
            android:id="@+id/txtTituloToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titulo_app_bar"
            android:textSize="@dimen/titleSize"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/imgFav"
            android:layout_width="@dimen/sizeIcon"
            android:layout_height="@dimen/sizeIcon"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imgMenu"
            android:src="@drawable/icons8_hotel_24"
            app:tint="@color/colorSecondaryText" />

        <ImageView
            android:id="@+id/imgMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_more_vert_24"
            >

        </ImageView>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>