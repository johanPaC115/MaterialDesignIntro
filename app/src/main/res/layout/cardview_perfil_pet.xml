<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview"
    android:layout_gravity="center"
    card_view:cardBackgroundColor="@color/card_viewcolor2">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgPerfilImg"
            android:layout_width="@dimen/perfilDimen"
            android:layout_height="@dimen/perfilDimen"
            android:src="@drawable/cerdito1"
            android:scaleType="centerCrop"
            android:layout_gravity="center"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvPerfilRaitingPet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/raiting_pet"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorSecondaryText"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/imgPerfilRaiting"
                android:layout_width="30dp"
                android:layout_height="30dp"
               android:layout_toRightOf="@+id/tvPerfilRaitingPet"
                android:src="@drawable/icons8_hueso_raitng" />
        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>